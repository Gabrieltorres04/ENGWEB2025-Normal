extends layout

block content
  .w3-container.w3-padding-16
    header.w3-container.w3-green.w3-center.w3-padding-32
      h1.w3-xxxlarge Detalhes do País: #{nomePais}

    .w3-container.w3-padding-16
      h2.w3-text-green Participações
      if participacoes && participacoes.length > 0
        table.w3-table-all.w3-striped.w3-hoverable.w3-card-4
          thead
            tr.w3-green
              th ID Edição
              th Ano
              th Música
              th Intérprete
              th Venceu?
          tbody
            each p in participacoes
              tr
                td
                  a(href=`/${p.idEdicao}`)= p.idEdicao
                td= p.ano
                td= p.musica
                td= p.interprete
                td= p.venceu ? "Sim" : "Não"
      else
        p.w3-text-orange Este país não tem participações registadas como concorrente.

      h2.w3-text-green.w3-margin-top Edições Organizadas
      if organizacoes && organizacoes.length > 0
        table.w3-table-all.w3-striped.w3-hoverable.w3-card-4
          thead
            tr.w3-green
              th ID Edição
              th Ano
          tbody
            each org in organizacoes
              tr
                td
                  a(href=`/${org.idEdicao}`)= org.idEdicao
                td= org.ano
      else
        p.w3-text-orange Este país não organizou nenhuma edição registada.

      footer.w3-container.w3-padding-16.w3-center
        a.w3-button.w3-teal.w3-round-large(href="/") Voltar à Página Principal