extends layout

block content
  .w3-container.w3-padding-16
    header.w3-container.w3-teal.w3-center.w3-padding-32
      h1.w3-xxxlarge Eurovisão - Edições
      p.w3-large Bem-vindo ao arquivo de edições do Festival Eurovisão da Canção.

    .w3-container.w3-padding-16
      h2.w3-text-teal Lista de Edições
      if edicoes && edicoes.length > 0
        table.w3-table-all.w3-striped.w3-hoverable.w3-card-4
          thead
            tr.w3-teal
              th ID Edição
              th Ano da Edição
              th País Organizador
              th País Vencedor
          tbody
            each edicao in edicoes
              tr
                td
                  a(href=`/${edicao._id}`)= edicao._id
                td= edicao.anoEdicao
                td
                  if edicao.organizacao
                    a(href=`/paises/${edicao.organizacao}`)= edicao.organizacao
                  else
                    | N/A
                td
                  if edicao.vencedor
                    a(href=`/paises/${edicao.vencedor}`)= edicao.vencedor
                  else
                    | N/A
      else
        p.w3-text-red Não foram encontradas edições.