extends layout

block content
  .w3-container.w3-padding-16
    header.w3-container.w3-blue-grey.w3-center.w3-padding-32
      h1.w3-xxxlarge Detalhes da Edição: #{edicao._id}

    .w3-container.w3-padding-16
      h2.w3-text-blue-grey Informação Geral
      .w3-card-4.w3-padding
        p
          strong ID da Edição: 
          | #{edicao._id}
        p
          strong Ano da Edição: 
          | #{edicao.anoEdicao}
        p
          strong País Organizador: 
          if edicao.organizacao
            a(href=`/paises/${edicao.organizacao}`)= edicao.organizacao
          else
            | N/A
        p
          strong País Vencedor: 
          if edicao.vencedor
            a(href=`/paises/${edicao.vencedor}`)= edicao.vencedor
          else
            | N/A

      h2.w3-text-blue-grey.w3-margin-top Músicas Participantes
      if edicao.musicas && edicao.musicas.length > 0
        table.w3-table-all.w3-striped.w3-hoverable.w3-card-4
          thead
            tr.w3-blue-grey
              th Título da Música
              th Intérprete
              th País Representado
          tbody
            each musica in edicao.musicas
              tr
                td= musica.titulo
                td= musica.interprete
                td
                  a(href=`/paises/${musica.pais}`)= musica.pais
      else
        p.w3-text-orange Não há músicas registadas para esta edição.

      footer.w3-container.w3-padding-16.w3-center
        a.w3-button.w3-teal.w3-round-large(href="/") Voltar à Página Principal